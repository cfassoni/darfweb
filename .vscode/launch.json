  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "env": {
    "PYTHONPATH": "${workspaceFolder}/src/darfweb"
  },
  "configurations": [
    {
      "name": "FastAPI[dev]",
      "type": "debugpy",
      "request": "launch",
      "module": "fastapi",
      "args": ["dev", "-e", "darfweb.api.main:app"],
      "jinja": true
    },
    {
      "name": "FastAPI[uvicorn]",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["darfweb.api.main:app", "--reload"],
      "jinja": true
    },
    {
      "name": "darf-cli sinacor --view",
      "type": "debugpy",
      "request": "launch",
      "module": "darfweb.cli.main",
      "args": ["sinacor", "-v", "${input:sinacorViewFile}"]
      // "console": "integratedTerminal",
      // "cwd": "${workspaceFolder}"
    }
  ],
  "inputs": [
    {
      "id": "sinacorViewFile",
      "type": "promptString",
      "description": "Enter the path to the Sinacor file",
      "default": "${workspaceFolder}/notebooks/notas/nota_btg_spot_test.pdf"
    }
  ]
}
